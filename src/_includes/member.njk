{% import "./blocks/header.html" as header %}
{% import "./blocks/caruselMember.html" as caruselMember %}
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="../../../../static/typo.css" rel="stylesheet" ></link>
    <link href="../../../../static/styles.css" rel="stylesheet" ></link>
    <link href="../../../../static/styles/member-details.css" rel="stylesheet" ></link>

    <title>{{ title }}</title>
  </head>
  <body class="page">
    <div class="page__content">
      {{ header.props('', true)}}
      <main class="member-details typo typo_theme_plain">
        <div class="member-details__info">
          {% if photo %}
            <img src="{{photo}}" class="member-details__image"/>
          {% else %}
            <img src="/static/default_avatar.jpeg" class="member-details__image"/>
          {% endif %}
          <div class="member-details__columns">
            <div class="member-details__name">
              {{name}}
            </div>
            <div class="member-details__role">{{role}}</div>
            {%- if instrument -%}
              <div class="member-details__instrument">{{instrument}}</div>
            {%- endif -%}
            {%- if city -%}
              <div class="member-details__city">{{city}}</div>
            {%- endif -%}
          </div>
        </div>
        <div class="member-details__history">{{history | safe}}</div>
      </main>
      {% include "./blocks/footer.njk" %}
    </div>
  </body>
</html>
